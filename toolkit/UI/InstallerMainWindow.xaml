<Window x:Class="CoApp.Toolkit.UI.InstallerMainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Installer" Width="700" Height="400" x:Name="InstallerWindow" Background="Transparent" AllowsTransparency="True" WindowStyle="None" 
        ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" Loaded="OnLoaded" Icon="/CoApp.Client;component/resources/images/logo.png" ShowInTaskbar="False">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
                <ResourceDictionary>
                    <Storyboard x:Key="showWindow">
                        <DoubleAnimation Storyboard.TargetName="InstallerWindow" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0:.3" />
                    </Storyboard>
                    <Storyboard x:Key="hideWindow">
                        <DoubleAnimation Storyboard.TargetName="InstallerWindow" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0:.3" />
                    </Storyboard>
                    <Storyboard x:Key="slideTrans" Name="SlideStoryboard">
                        <DoubleAnimationUsingKeyFrames Duration="0:0:1.0" Storyboard.TargetName="CancelButton" Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.X)">
                            <EasingDoubleKeyFrame Value="0" KeyTime="00:00:00">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <SineEase EasingMode="EaseInOut" />
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                            <EasingDoubleKeyFrame Value="120" KeyTime="00:00:01.0">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <SineEase EasingMode="EaseInOut" />
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Border Style="{StaticResource ContentBorderStyle}">
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Width="Auto">

                <StackPanel DockPanel.Dock="Top" Name="Header" Style="{StaticResource HeaderBackground}" Background="#FFe0f2e0" Height="90" MouseLeftButtonDown="HeaderMouseLeftButtonDown">
                    <Grid Name="headerControls">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="CoAppButton" Grid.Column="1" Style="{DynamicResource MetroPathButton}" VerticalAlignment="Top" Margin="0,0,0,0">
                            <TextBlock TextWrapping="Wrap" Margin="5" Style="{StaticResource HeaderButtonText}">
                <Run Text="CoApp" />
                            </TextBlock>
                        </Button>

                        <Rectangle Grid.Column="2" Height="13" Stroke="Black" VerticalAlignment="Center" Width="2" Opacity="0.3" />

                        <Button x:Name="AboutButton" Grid.Column="3" Style="{DynamicResource MetroPathButton}" VerticalAlignment="Top" Margin="0,0,80,0">
                            <TextBlock TextWrapping="Wrap" Margin="5" Style="{StaticResource HeaderButtonText}">
                <Run Text="About" />
                            </TextBlock>
                        </Button>

                        <Button x:Name="CloseBtn" Grid.Column="4" Width="19" Height="23" Style="{StaticResource MetroPathButton}" ToolTip="Cancel" Click="CloseBtnClick">
                            <Path Fill="Black" Data="{StaticResource PathClose}" Margin="0,0,0,0" Stretch="Fill" Width="9" Height="9" />
                        </Button>
                    </Grid>
                    <Grid Margin="20,-15,20,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" Width="535">
                            <Canvas Height="50">
                            <Viewbox Stretch="Uniform" StretchDirection="DownOnly" MaxWidth="535">
                            <TextBlock Name="ProductName" Height="50" Margin="0,0,0,5" Text="(product) (ver)" FontSize="35" Foreground="Black" TextTrimming="WordEllipsis" />
                            </Viewbox>
                            </Canvas>
                            <TextBlock Name="ProductVersion" Height="20" Margin="0,-10,0,5" Text="(ver)" FontSize="9" Foreground="#FF606060" />
                            <TextBlock Name="OrganizationName" Height="30" Margin="0,-15,0,5" Text="(org)" FontSize="18" Foreground="#FF606060" />
                        </StackPanel>
                        <Image Grid.Column="0" Margin="0,-13,0,0" Width="64" Height="64" HorizontalAlignment="Center" Name="PackageIcon" Stretch="Uniform" VerticalAlignment="Center" Source="/CoApp.Client;component/resources/images/logo.png" />
                    </Grid>
                </StackPanel>
                <Viewbox  DockPanel.Dock="Top" Margin="20,10,20,0"  Height="150" Width="620" StretchDirection="DownOnly" Stretch="Uniform" TextOptions.TextFormattingMode="Ideal" >
                    <TextBlock Width="620" Height="150"> 
                    <TextBlock Name="DescriptionText"  Width="620" FontSize="17" TextWrapping="Wrap" TextAlignment="Justify" Foreground="Black" SourceUpdated="DescriptionText_SourceUpdated"> 
txt
                </TextBlock></TextBlock>
                </Viewbox>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <ProgressBar Height="30" Name="InstallationProgress" Width="450" Visibility="Collapsed" Grid.Row="1" Foreground="#FF01D329" />

                    <ComboBox Margin="0,0,0,0" Name="WhichVersionToInstall" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Background="White" Foreground="Black" Width="400">
                        
                    </ComboBox> 

                    <Grid Margin="10,10,10,10" Grid.Row="2" Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="1" x:Name="RemoveButton" Style="{DynamicResource MetroPathButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="120" Margin="15,0,0,0" ToolTip="Cancel" Click="RemoveButtonClick" Visibility="Visible" >
                            <Button.RenderTransform>
                                <TranslateTransform x:Name="SlideRemove" X="0"></TranslateTransform>
                            </Button.RenderTransform>
                            <Canvas>
                                <Ellipse Width="30" Height="30" Margin="0,5,5,5" Stretch="Fill" StrokeLineJoin="Round" Stroke="{StaticResource MetroMainButtons}" StrokeThickness="1.5" />
                                <Path Width="14" Height="16" Margin="8,12" Stretch="Fill" Fill="{StaticResource MetroMainButtons}" Data="{StaticResource PathClose}" />
                                <TextBlock Name="RemoveText" Margin="37,-2" Width="80" Style="{StaticResource ButtonText}" TextAlignment="Left"  Canvas.Top="10">
                                <Run Text="Remove" />
                                </TextBlock>
                                <Rectangle Width="120" Height="2" Margin="0,38,0,0" StrokeThickness="3.5" Stroke="{StaticResource RemoveStroke}"  Stretch="Fill" StrokeLineJoin="Round"  ></Rectangle>

                            </Canvas>
                        </Button>
                        <Button Grid.Column="1" Name="RemoveAdvanced" Width="20" Height="40" Margin="115,0,0,0" Style="{DynamicResource MetroPathButton}" Click="ShowRemoveMenu">
                            <Button.ContextMenu >
                                <ContextMenu Name="RemoveContextMenu">
                                    <ContextMenu.ItemContainerStyle>
                                        <Style TargetType="MenuItem">
                                            <Setter Property="CommandParameter"  Value="{Binding CommandParam}" />
                                            <Setter Property="Header"  Value="{Binding Text}" />
                                            <EventSetter Event="Click" Handler="MenuItemClick" />
                                        </Style>
                                    </ContextMenu.ItemContainerStyle>
                                </ContextMenu>
                            </Button.ContextMenu>
                            <Canvas Margin="0">
                                <TextBlock Margin="0,8,0,0"  Style="{StaticResource ButtonText}" Name="RemoveElipsis"><Run Text="..."/></TextBlock>
                            </Canvas>
                        </Button>

                        <Button Grid.Column="2" x:Name="CancelButton" Style="{DynamicResource MetroPathButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="120" Margin="15,0,0,0" ToolTip="Cancel" Click="CloseBtnClick" >
                            <Button.RenderTransform>
                                <TranslateTransform x:Name="Slide" X="0"></TranslateTransform>
                            </Button.RenderTransform>
                            <Canvas>
                                <Ellipse Width="30" Height="30" Margin="0,5,5,5" Stretch="Fill" StrokeLineJoin="Round" Stroke="{StaticResource MetroMainButtons}" StrokeThickness="1.5" />
                                <Path Width="14" Height="16" Margin="8,12" Stretch="Fill" Fill="{StaticResource MetroMainButtons}" Data="{StaticResource PathClose}" />
                                <TextBlock Name="CancelText" Margin="37,-2" Width="80" Style="{StaticResource ButtonText}" TextAlignment="Left"  Canvas.Top="10">
                  <Run Text="Cancel" />
                                </TextBlock>
                                <Rectangle Width="120" Height="2" Margin="0,38,0,0" StrokeThickness="3.5" Stroke="{StaticResource CancelStroke}"  Stretch="Fill" StrokeLineJoin="Round"  ></Rectangle>
                            </Canvas>
                        </Button>
                        
