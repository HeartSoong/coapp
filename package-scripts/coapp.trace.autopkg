// autopackage Trace
package
{
    name: CoApp.Trace;
    display-name: "CoApp Trace Tool";
    policy: 1.0;
    /*license: <path to license on disk> */
    orig-location: "http://coapp.org/repository/$OUTPUT";
    feed-location: "http://coapp.org/repository/packages.atom.xml";
    binding-min: "1.0.0.0";
    binding-max: ($CURRENT-1);
}


identity
{
    email: "gserack@microsoft.com";
    website: "http://coapp.org";
}

dependencies {
	add: "coapp.toolkit-1.1.2.292-any";
}


